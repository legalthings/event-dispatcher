{
  "name": "event-dispatcher",
  "version": "0.1.0",
  "description": "Event dispatcher",
  "repository": {
    "type": "git",
    "url": "https://github.com/legalthings/event-dispatcher.git"
  },
  "author": "Moesjarraf",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts",
    "serve": "nodemon ./dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "ava",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@types/node-cache": "^4.1.1",
    "async": "^2.1.2",
    "body-parser": "^1.15.2",
    "commander": "^2.11.0",
    "compression": "^1.6.2",
    "config": "^1.26.2",
    "cors": "^2.8.4",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-flash": "^0.0.2",
    "express-session": "^1.14.2",
    "express-validator": "^3.1.3",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "morgan": "^1.7.0",
    "node-cache": "^4.1.1",
    "node-ses": "^2.1.0",
    "request": "^2.78.0",
    "ts-node": "^3.3.0",
    "unescape": "^1.0.1"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.2",
    "@types/chai": "^4.0.6",
    "@types/commander": "^2.9.2",
    "@types/compression": "0.0.33",
    "@types/config": "0.0.32",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/jquery": "^2.0.41",
    "@types/lodash": "^4.14.63",
    "@types/morgan": "^1.7.32",
    "@types/nock": "^8.2.1",
    "@types/node": "^7.0.12",
    "@types/request": "0.0.45",
    "@types/supertest": "^2.0.0",
    "ava": "1.0.0-beta.6",
    "chai": "^4.1.2",
    "concurrently": "^3.4.0",
    "cross-env": "^5.0.5",
    "mocha": "^3.5.3",
    "nock": "^9.0.27",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.7",
    "supertest": "^2.0.1",
    "tslint": "^5.0.0",
    "typescript": "^2.5.3"
  },
  "ava": {
    "files": [
      "test/**/*.test.ts",
      "test/*.test.ts"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "js,json,ts",
    "delay": "2500",
    "verbose": true
  }
}
